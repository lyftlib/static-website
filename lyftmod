#!/usr/bin/env node
const {docopt} = require('docopt');

const add = require('./commands/add');
const remove = require('./commands/remove');
const use = require('./commands/use');
const {overrideEnvVar} = require('./src/utils');

// Defines all command allowed in the cli
const doc = `
USAGE:
    index.js add <name> <region> <path-to-dir> [--akey-id=<username>] [--akey-secret=<token>] ${add.cli.join(' ')}
    index.js remove <name>[--akey-id=<username>] [--akey-secret=<token>]
    index.js use <name> [--akey-id=<username>] [--akey-secret=<token>] (${use.cli.join(' | ')})
`;
const command = docopt(doc, {version: '0.0.1rc'});

// Allows the user to have multiple github accounts in one project
overrideEnvVar({
    '--username': 'AWS_AKEY_ID',
    '--token': 'AWS_AKEY_SECRET',
}, command);

// Selects the command
if(command.add) {
    add.method(add.filter(command, add.args));
} else if(command.remove) {
    remove.method(command['<name>']);
} else if (command.use) {
    use.method(use.filter(command, use.args));
}
